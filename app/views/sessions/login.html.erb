<div>
<h1>Login</h1>

<% if flash[:error] %>
<p style="color: red;"><%= flash[:error] %></p>
<% end %>

<%= form_for :session, url: login_path do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit %>
<% end %>
</div>