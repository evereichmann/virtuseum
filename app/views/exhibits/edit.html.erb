<h1>Edit Your Exhibit</h1><br/><br/>

<%= form_for @exhibit do |f| %>
    <%= f.label :name %>:
    <%= f.text_field :name %><br/><br/>
    <%= f.label :picture %>:
    <%= f.text_field :picture %><br/><br/>
    <%= f.label :category %>:
    <%= f.text_field :category %><br/><br/>
    <%= f.label :date %>:
    <%= f.text_field :date %><br/><br/>
    <%= f.label :museum_id %>:
    <%= f.collection_select :museum_id, Museum.all , :id, :name %>
        <br/>
        <%= f.fields_for :items do |builder| %>
            <%= render 'item_form', f:builder%>
        <br/>
        <% end%>
    <%= f.submit %>
    <% end %>