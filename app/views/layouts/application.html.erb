<!DOCTYPE html>
<html>
  <head>
    <title>Virtuseum</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1 id='logo'>Virtuseum</h1>
        <ul id='nav'>
            <% if @current_user %>
              <li>| <a href="/users/<%= @current_user.id %>">Welcome <%= @current_user.name_first %></a> | </li>
              <li><%= link_to "Log-out", logout_path, method: :delete %></li>
              <li><%= link_to "Users", users_path %></li>
              <li><%= link_to "Items", items_path %></li>
              <li><%= link_to "Collections", collections_path %></li>
              <div class="dropdown"><li><%= link_to "Museums", museums_path %></li>
              <div class="dropdown-content">
                    <ul>
                      <% Museum.all.each do |museum| %>
                      <li><%= link_to museum.name, museum %></li>
                      <% end %> 
                    </ul>
                  </div> </div>
              <div class="dropdown"><li><%= link_to "Exhibits", exhibits_path %></li>
              <div class="dropdown-content">  
              <ul>
                  <% Exhibit.all.each do |exhibit| %>
                  <li><%= link_to exhibit.name, exhibit %></li>
                  <% end %>
                </ul> </div> </div>
              <li><%= link_to "Become A Curator", new_curator_path %></li>
            <% else %>
              <li class='right'><%= link_to 'Sign-up', new_user_path %></li>
              <li class='right'><%= link_to 'Login', new_session_path %></li>
            <% end %>
        </ul>
    <%= yield %>
  </body>

  <div class='footer'>
Created by:  <a href='https://github.com/evereichmann'>Eve Reichmann</a> && <a href='http://haleyvferro.com/'>Haley Ferro</a>
  </div>

</html>
