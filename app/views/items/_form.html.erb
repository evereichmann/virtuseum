<%= form_for @item do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :year_created %>
<%= f.number_field :year_created %>
<%= f.label :picture%>
<%= f.text_field :picture %>
<%= f.label :classification%>
<%= f.text_field :classification%>
<%= f.label :collection_id%>
<%= f.collection_select :collection_id, @collection, :id, :name %>
<%= f.label :exhibit_id %>
<%= f.collection_select :exhibit_id, @exhibit, :id, :name %>
<%= f.label :description %>
<%= f.text_area :description %>
<%= f.submit %>
<% end %>